 <!-- Doors -->
  
    <door>
      <name>Weapon doorT</name>
      <mode>in-transit</mode>
      <path>Aircraft/Tu-95MR/Sounds/door_close.wav</path>
      <condition>
       <and>
	<greater-than>
          <property>sim/multiplay/generic/float[13]</property>
          <value>0.01</value>
        </greater-than>
	<less-than>
          <property>sim/multiplay/generic/float[13]</property>
          <value>0.99</value>
        </less-than>
       </and>
      </condition>
      <volume>
        <factor>0.11</factor>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>500</max-dist>
    </door>
    
    <door>
      <name>Weapon door</name>
      <path>Aircraft/Tu-95MR/Sounds/door_closed.wav</path>
      <condition>
        <equals>
          <property>sim/multiplay/generic/float[13]</property>
          <value>0.0</value>
        </equals>
      </condition>
      <volume>
        <factor>0.35</factor>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>500</max-dist>
    </door>
  
  </fx>
 
