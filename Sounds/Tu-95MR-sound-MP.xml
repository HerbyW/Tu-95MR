     <!-- Rumble on runway -->

    <rumble>
      <name>rumble1</name>
      <mode>looped</mode>
      <path>Aircraft/Tu-95MR/Sounds/24roll.wav</path>
      <condition>
          <property>gear/gear[0]/wow</property>
      </condition>
      <volume>
        <property>sim/multiplay/generic/float[12]</property>
        <type>log</type>
        <factor>0.15</factor>
	<min>0.0</min>
        <max>0.2</max>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>2000</max-dist>
    </rumble>
    
    <rumble>
      <name>rumble2</name>
      <mode>looped</mode>
      <path>Aircraft/Tu-95MR/Sounds/24roll.wav</path>
      <condition>
        <or>          
          <property>gear/gear[1]/wow</property>
          <property>gear/gear[2]/wow</property>
        </or>
      </condition>
      <volume>
        <property>sim/multiplay/generic/float[12]</property>
        <type>log</type>
        <factor>0.15</factor>
	<min>0.0</min>
        <max>0.2</max>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>2000</max-dist>
    </rumble>
    
    
    
    <!-- Gear in and out -->
    
    <gear>
      <name>gear</name>
      <mode>in-transit</mode>
      <path>Aircraft/Tu-95MR/Sounds/gear.wav</path>
      <property>gear/gear[0]/position-norm</property>
      <volume>        
        <max>0.55</max>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </gear>

    <gear>
     <name>gear-lock</name>
     <path>Aircraft/Tu-95MR/Sounds/gear-lck.wav</path>
     <condition>
       <greater-than>
         <property>gear/gear[0]/position-norm</property>
         <value>0.96</value>
       </greater-than>
     </condition>
     <volume>        
        <max>0.55</max>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </gear>

    <!-- Touchdown -->
    
    <squeal>
      <name>squeal1</name>
      <mode>once</mode>
